// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id
  name     String
  email    String    @unique
  password String
  admin    Boolean @default(false)
  product  Product[]

  @@map("users")
}

model Product {
  id          String  @id
  name        String  @unique
  description String
  price       String
  cover_image String?
  user        User    @relation(fields: [userId], references: [id])
  userId      String
}
